<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".questions.exam.ShowQuestionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_qtn_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/25"
                android:layout_marginTop="25dp"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/txt_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_qtn"
                style="@style/option" />
            <TextView
                android:id="@+id/txt_opt_a"
                style="@style/option" />
            <TextView
                android:id="@+id/txt_opt_b"
                style="@style/option" />
            <TextView
                android:id="@+id/txt_opt_c"
                style="@style/option" />
            <TextView
                android:id="@+id/txt_opt_d"
                style="@style/option" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp">


                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_prev"
                    android:background="@null"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/finish_exam_button"
                    android:textColor="@color/white"
                    android:text="Finish exam"
                    android:textAllCaps="false"/>
                <ImageButton
                    android:id="@+id/btn_next"
                    android:src="@mipmap/ic_next"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=">>"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

